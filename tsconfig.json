{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "incremental": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@api/*": [
        "src/api/*"
      ],
      "@app/*": [
        "src/api/app/*"
      ]
    }
  },
  "ts-node": {
    "files": true
  },
  "include": [
    "src/api",
    "test",
    "ormconfig.ts",
    "jest.config.ts"
  ]
}
